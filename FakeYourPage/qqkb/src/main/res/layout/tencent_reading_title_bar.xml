<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tencent_reading_title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:background="#1affffff"
        android:paddingLeft="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="天天快报"
            android:textColor="@color/card_title_color"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/tencent_reading_title_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11.3dp"
            android:src="@drawable/card_refresh_drawable" />

    </RelativeLayout>
</merge>
